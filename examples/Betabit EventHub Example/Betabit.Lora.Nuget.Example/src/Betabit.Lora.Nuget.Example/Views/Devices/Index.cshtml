@model IEnumerable<Betabit.Lora.Nuget.Example.Models.Device>

@{
	ViewData["Title"] = "Overview";
}

<h2>Overview</h2>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Room)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DeviceAddress)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.NetworkAddress)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.NetworkKey)
		</th>
		<th></th>
	</tr>
	
@foreach (var item in Model) {
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.Name)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Room.Name)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.DeviceAddress)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.NetworkAddress)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.NetworkKey)
		</td>
		<td>
			<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
			<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
			<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
		</td>
	</tr>
}
</table>
